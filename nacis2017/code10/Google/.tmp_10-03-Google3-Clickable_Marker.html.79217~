<html> 
<head> 
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" /> 
<style type="text/css"> 
html { height: 100% } 
body { height: 100%; margin: 0px; padding: 0px } 
#map_canvas { height: 100% } 
</style> 

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"> 
</script> 

<script type="text/javascript">

function initialize() 
//this defines the center of the map when it is referred to in myOptions below
{ var myLatlng = new google.maps.LatLng(41.258531,-96.012599); 

//this defines the zoom level 
var myOptions = {
//this defines the zoom level 
  zoom: 14,
  center: myLatlng,
//ROADMAP can be changed to SATELLITE, TERRAIN, and HYBRID
  mapTypeId: google.maps.MapTypeId.ROADMAP
}
//this associates the map and options the map_canvas div layer
var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions) ;

var contentString = 'Cartography and GIS Laboratory <br> University of Nebraska at Omaha' 
var infowindow = new google.maps.InfoWindow({
    content: contentString
});

var marker = new google.maps.Marker({
    position: myLatlng,
    map: map,
    title:"Cartography and GIS Laboratory"
});

google.maps.event.addListener(marker, 'click', function() {
  infowindow.open(map,marker);
});
}

</script> 
</head> 

<body onLoad="initialize()"> 
<div id="map_canvas" style="width:700px; height:300px"></div> 
</body> 
</html>
